<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jsbeans.antiplag</groupId>
        <artifactId>project-antiplag</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>


    <artifactId>antiplag-build</artifactId>

    <!-- jar - for executing with IDE -->
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>

    <name>${project.artifactId}</name>


    <properties>
        <maven.build.timestamp.format>yyyy-MM-dd</maven.build.timestamp.format>
        <!-- define system js-beans location in jar -->
        <org.jsbeans.system.path>jsb-system</org.jsbeans.system.path>
        <!-- define application js-beans location in jar and result build directory-->
        <org.jsbeans.application.path>jsb-application</org.jsbeans.application.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jsbeans</groupId>
            <artifactId>build-local</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jsbeans.antiplag</groupId>
            <artifactId>antiplag-workspace</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jsbeans.antiplag</groupId>
            <artifactId>antiplag-workspace</artifactId>
            <version>1.0-SNAPSHOT</version>
            <classifier>jsb-application</classifier>
        </dependency>
        <dependency>
            <groupId>org.jsbeans.antiplag</groupId>
            <artifactId>antiplag-jsb</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.jsbeans.antiplag</groupId>
            <artifactId>antiplag-jsb</artifactId>
            <version>1.0-SNAPSHOT</version>
            <classifier>jsb-application</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>collect-all</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly.xml</descriptor>
                            </descriptors>
                            <finalName>antiplag-${maven.build.timestamp}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
